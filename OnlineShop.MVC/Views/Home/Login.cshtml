<div ng-app="loginModule" style="margin:5px 5px 5px 5px">
    <div ng-controller="loginController" class="container">
        <form novalidate name="loginForm" ng-submit="LoginUser(UserData)">
            <div style="color:red">{{message}}</div>
            <div class="row">
                <label class="text-primary">Email:</label>
                <input class="form-control" type="email" ng-model="UserData.Email" name="sEmailID" ng-class="submitted?'ng-dirty':''" />
                <span class="error" ng-show="(loginForm.sEmailID.$dirty || submitted) && loginForm.sEmailID.$error.email">Email ID not valid!</span>
            </div>
            <div class="row padding-top">
                <label class="text-primary">Password:</label>
                <input class="form-control" type="password" ng-model="UserData.Password" name="sPasswordID" ng-class="submitted?'ng-dirty':''" required autofocus />
                <span class="error" ng-show="(loginForm.sPasswordID.$dirty || submitted) && loginForm.sPasswordID.$error.password">Password is required!</span>
            </div>
            <div class="row padding-top">
                <input class="btn btn-primary" type="submit" value="Log In" />
                <a href="~/Home/Register" class="padding-left">Register</a>
            </div>
        </form>
    </div>
</div>
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular-route.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/lodash.min.js"></script>
<script src="~/Scripts/LoginController.js"></script>